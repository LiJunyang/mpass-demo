<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_popup_bg">

    <GridView
            android:id="@+id/emoji_grid"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:verticalSpacing="10dp"
            android:numColumns="6"
            android:stretchMode="columnWidth"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <View
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/dark_gray2"
            app:layout_constraintTop_toBottomOf="@id/emoji_grid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="visible" />

    <GridLayout
            android:id="@+id/message_process_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@id/divide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="visible">

        <TextView
                android:id="@+id/copy"
                android:text="复制"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_copy_large"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/transmit"
                android:text="转发"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_transmit"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/reply"
                android:text="回复"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_reply"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/fav"
                android:text="收藏"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_fav_large"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/deal_later"
                android:text="稍后处理"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_deal_later"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/recall"
                android:text="撤回"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_recall"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/multi_select"
                android:text="多选"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_multi_select"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/private_send"
                android:text="私发"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_private_send"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/set_top"
                android:text="置顶"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_set_top"
                android:gravity="center"
                android:layout_columnWeight="1" />

        <TextView
                android:id="@+id/delete"
                android:text="删除"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/ic_delete"
                android:gravity="center"
                android:layout_columnWeight="1" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>