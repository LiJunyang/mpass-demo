<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeActivity">

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/home_tab_group" />

    <LinearLayout
            android:id="@+id/home_tab_group"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clipChildren="false"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
                android:id="@+id/message_tab_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/message_tab_label"
                    android:text="消息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:drawableTop="@drawable/ic_message" />

            <View
                    android:id="@+id/message_unread_count_dot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignRight="@+id/message_tab_label"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_red_dot"
                    android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/contacts_tab_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/contacts_tab_label"
                    android:text="通讯录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:drawableTop="@drawable/ic_contacts" />

            <View
                    android:id="@+id/new_contacts_count_dot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignRight="@+id/contacts_tab_label"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_red_dot"
                    android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/mine_tab_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/mine_tab_label"
                    android:text="我的"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:drawableTop="@drawable/ic_mine" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>